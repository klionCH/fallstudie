name: Multi-Job Workflow

on: push

jobs:
  first-job:
    runs-on: ubuntu-latest
    steps:
      - name: Echo Message
        run: echo "This is the first job"

  second-job:
    runs-on: ubuntu-latest
    steps:
      - name: Echo Message
        run: echo "This is the second job"

  third-job:
    runs-on: ubuntu-latest
    needs: [first-job, second-job]
    steps:
      - name: Echo Message
        run: echo "This is the third job"